generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
} 


model Image{
  id          String   @id @default(cuid())
  src         String   
  alt         String
  width       Int
  height      Int
  cameraSpecs CameraSpecs @relation(fields: [cameraSpecsId],references: [id])
  cameraSpecsId String    @unique
  story        String 
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model CameraSpecs{
  id          String  @id @default(cuid())
  camera      String
  lens        String
  focalLength String
  aperture    String
  shutterSpeed String
  iso          String
  image        Image?
}


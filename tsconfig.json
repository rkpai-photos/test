{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "es2020"], // Merged the libs
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext", // Retained from your original config
    "moduleResolution": "bundler", // Retained from your original config
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2017", // Added from your new configuration
    "allowSyntheticDefaultImports": true // Added from your new configuration
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
